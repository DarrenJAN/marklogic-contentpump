<?xml version="1.0" encoding="utf-8"?>
<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
        <directory>${basedir}/../mapreduce/target</directory>
        <outputDirectory>/lib</outputDirectory>
        <includes>
          <include>marklogic-mapreduce*.jar</include>
        </includes>
        <excludes>
          <exclude>marklogic-mapreduce*-examples.jar</exclude>
          <exclude>marklogic-mapreduce*-test.jar</exclude>
        </excludes>
    </fileSet>
    <fileSet>
        <directory>${basedir}/../mapreduce/src/lib</directory>
        <outputDirectory>/lib</outputDirectory>
        <includes>
          <include>marklogic-xcc*.jar</include>
        </includes>
    </fileSet>
    <fileSet>
      <directory>src/main</directory>
      <outputDirectory>/bin</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>*.sh</include>
        <include>*.bat</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/conf</directory>
      <outputDirectory>/conf</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>log4j.properties</include>
      </includes>
    </fileSet>
    <fileSet>
      <includes>
        <include>LEGAL*</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${basedir}/../LICENSE.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <scope>runtime</scope>
      <outputDirectory>/lib</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>
